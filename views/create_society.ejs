<%- include('partials/header') %> 
<div class="backToAdmin" style="padding-left: 20%;padding-top: 2%;color: 1e1e1e;">
    <a href="/admin" style="margin-left: 5px;"><%="<< "%>Admin Page</a>
</div>
<div id="login" class="container-fluid row" >
    <div class="col-md-6 col-10 mx-auto">
        <h1 style="text-align: center;">Add Society/Club</h1>
        <form action="/admin/create_society" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Society name">Society/Club Name</label>
                <input type="text" name="name" class="form-control" id="name" placeholder="Society Name" required>
            </div>
            <div class="form-group">
                <label for="faculty">Faculty Name</label>
                <input type="text" name="faculty" class="form-control" id="faculty" placeholder="Faculty Name with Designation" required>
            </div>
            
            <div class="form-group mt-3">
                <label for="head">Society Head</label>
                <input type="text" name="head" class="form-control" id="head" placeholder="Society Head" required >
            </div>

            <div class="form-group mt-3">
                <label for="head">Society Type</label>
                <select class="custom-select my-1 mr-sm-2" id="soc_type" name="soc_type" required>
                    <option value="Tech Council">Tech Council</option>
                    <option value="Cultural Council">Cultural Council</option>
                    <option value="Innovative Team">Innovative Team</option>
                    <option value="Literary Council">Literary Council</option>
                    <option value="Social Society">Social Society</option>
                </select>
            </div>

            <div class="form-group">
                <label for="logo upload">Upload Logo</label>
                <input type="file" class="form-control-file" id="society_logo" name="society_logo">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %> 