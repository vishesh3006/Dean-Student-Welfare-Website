                </div>
                <div class="col-sm-6 col-6 col-md-4">
                  <a href="/img/cricket.jpg" data-lightbox="photos">
                    <img class="img-fluid" src="/img/cricket.jpg" alt="">
                  </a>
                </div>
    
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6 col-md-6 pt-3 mx-auto px-5" style="padding-left: 1%; padding-right: 1%; margin:0%;">
          <div class="card" style="background-color: transparent; height: 90%;">
            <div class="card-header" style="background-color: #be3333; color: white;">
              <h4>Awards and Publications</h4>
            </div>
            <div class="card-body" style="background-color: transparent;">
              <marquee align="middle" style="text-align:left;height: 50vmin;position: relative;" direction="up" scrollamount="3" onmouseover="this.stop()" onmouseout="this.start()">
                <div class="events">
                  <ul class="list-group list-group-flush">
                    <% awards.forEach(award => { %>
                      <li class="list-group-item" style="background-color: transparent;">
                        <a href="./awards/">
                          <div class="row">
                            <div class="col-10 mx-auto align-self-center" style="display: inline-block;">
                              <% if(award.type === 'award'){ %>
                                <p style="font-size: 1rem; color: black;"><%= award.name %> came <%= award.place %> in <%= award.event_name %>  </p>
                              <% } else{ %>
                                <p style="font-size: 1rem; color: black;"><%= award.name %> published the paper at <%= award.event_name %> </p>
                              <% } %>
                              <p style="font-size: 1rem; color: black;"><%= award.name %></p>
                            </div>
                          </div>
                        </a>
                      </li>
                    <% }) %> 
                  </ul>
                </div>
              </marquee>
            </div>
          </div>
          <div class="d-flex justify-content-end mt-1">
            <a href="/awards" class="btn btn-dark">Awards Archives</a>
          </div>
      </div>
      </div>
    </section>
</div>
